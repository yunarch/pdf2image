function changed {
    git diff --name-only HEAD@{1} HEAD | grep "^$1" >/dev/null 2>&1
}

echo "\u001B[34mğŸ” Checking for changes in lock file...\u001B[0m"

if changed "bun.lock"; then
    echo "\u001B[33mğŸ“¦ The lock file has changed. Running \u001B[35minstall\u001B[33m to bring your dependencies up to date.\u001B[0m"
    bun install
fi

echo "\u001B[32mâœ… You are up to date.\u001B[0m"
exit 0