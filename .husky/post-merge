. "$(dirname -- "$0")/common.sh"

BLUE="\033[34m"
YELLOW="\033[33m"
MAGENTA="\033[35m"
GREEN="\033[32m"
RESET="\033[0m"

function changed {
    git diff --name-only HEAD@{1} HEAD | grep "^$1" >/dev/null 2>&1
}

printf "\n${BLUE}ğŸ” Checking for changes in lock file...${RESET}\n"

if changed "bun.lock"; then
    printf "${YELLOW}ğŸ“¦ The lock file has changed. Running ${MAGENTA}install${YELLOW} to bring your dependencies up to date.${RESET}\n\n"
    bun install
fi

printf "\n${GREEN}âœ… You are up to date.${RESET}\n"
exit 0