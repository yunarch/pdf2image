{
  "$schema": "https://json.schemastore.org/package",
  "private": true,
  "name": "pdf2image",
  "author": {
    "name": "Adrian Lopez Gonzalez",
    "url": "https://github.com/yunarch"
  },
  "description": "Application to convert a pdf into image and vice versa",
  "repository": {
    "type": "git",
    "url": "https://github.com/yunarch/pdf2image"
  },
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "postinstall": "husky",
    "lint": "bun-run-all lint:code lint:ts -t",
    "lint:code": "eslint . --cache --cache-strategy content",
    "lint:ts": "tsc --noEmit",
    "format": "prettier . --check",
    "format:all": "prettier . --write",
    "clean": "rimraf dist .eslintcache",
    "build": "vite build",
    "dev": "vite",
    "preview": "vite preview"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "pdf-lib": "1.17.1",
    "pdfjs-dist": "5.3.31",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "5.5.0",
    "tailwindcss": "4.1.8",
    "tailwind-merge": "3.3.0"
  },
  "devDependencies": {
    "@yunarch/config-web": "0.2.7",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "husky": "9.1.7",
    "lint-staged": "16.1.0",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "0.6.12",
    "eslint": "9.28.0",
    "rimraf": "6.0.1",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "@vitejs/plugin-react-swc": "3.10.1",
    "@tailwindcss/vite": "4.1.8",
    "@types/react": "19.1.7",
    "@types/react-dom": "19.1.6"
  },
  "packageManager": "bun@1.2.15"
}
